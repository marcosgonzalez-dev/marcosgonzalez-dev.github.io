---
// src/CibersecurityAnalist.astro

const cibersecurityAnalyst = [
  { name: "WIRESHARK", type: "NET_ANALYSIS" },
  { name: "NMAP", type: "RECON" },
  { name: "BURP SUITE", type: "WEB_SEC" },
  { name: "METASPLOIT", type: "EXPLOIT" },
  { name: "PYTHON", type: "SCRIPTING" },
  { name: "BLACK ARCH", type: "OS" },
  { name: "SPLUNK", type: "SIEM" },
  { name: "SNORT", type: "IDS/IPS" },
];
---

<section class="py-20 px-6 md:px-20 max-w-7xl mx-auto">
  <div class="mb-16 text-center opacity-0 reveal-sec-tools-title">
    <span
      class="font-montserrat font-medium text-sm text-theme-muted uppercase tracking-[0.2em]"
      data-lang="title.arsenal"
    >
      // Arsenal de seguridad
    </span>
  </div>

  <div
    class="flex flex-wrap justify-center items-center gap-x-10 gap-y-6 md:gap-x-16 md:gap-y-10"
  >
    {
      cibersecurityAnalyst.map((tool) => (
        <div class="sec-tool-item opacity-0 group cursor-default">
          <span class="block font-montserrat font-bold text-3xl md:text-5xl tracking-tight text-theme-accent transition-transform duration-300 ease-out group-hover:-translate-y-2">
            {tool.name}
          </span>
        </div>
      ))
    }
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  // Animación del título
  gsap.to(".reveal-sec-tools-title", {
    scrollTrigger: { trigger: ".reveal-sec-tools-title", start: "top 85%" },
    y: 0,
    opacity: 1,
    duration: 0.8,
    ease: "power3.out",
  });

  // Animación de entrada (Batch)
  ScrollTrigger.batch(".sec-tool-item", {
    start: "top 90%",
    onEnter: (batch) =>
      gsap.to(batch, {
        opacity: 1,
        scale: 1,
        stagger: { each: 0.05, from: "random" },
        duration: 0.8,
        ease: "back.out(1.7)",
      }),
  });

  // Estado inicial
  gsap.set(".sec-tool-item", { scale: 0.9 });
  gsap.set(".reveal-sec-tools-title", { y: 20 });
</script>
