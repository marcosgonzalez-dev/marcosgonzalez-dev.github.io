---
// src/components/CibersecurityAnalyst.astro

const certifications = [
    {
        id: "CERT-ISC2-105",
        title: "CC Certified in Cybersecurity Certification",
        issuer: "ISC2",
        date: "2026",
        hash: "e5f6g7h8",
    },
    {
        id: "8PV4C4A",
        title: "Google Cybersecurity Professional",
        issuer: "Google",
        date: "2024",
        hash: "a1b2c3d4",
    },
];
---

<section id="certifications" class="py-24 px-6 md:px-20 max-w-7xl mx-auto">
    <div class="mb-12 opacity-0 reveal-certs-title">
        <span
            class="font-montserrat font-medium text-sm text-theme-muted uppercase tracking-[0.2em]"
            data-lang="title.seccerts"
        >
            // Certificaciones
        </span>
    </div>

    <div
        class="opacity-0 reveal-terminal w-full max-w-3xl mx-auto bg-[#0c0c0c] border border-white/10 rounded-lg shadow-2xl overflow-hidden font-mono text-sm md:text-base"
    >
        <div
            class="bg-white/5 px-4 py-2 flex items-center gap-2 border-b border-white/5"
        >
            <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
            <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
            <div class="ml-4 text-xs text-gray-500 font-sans">root — -zsh</div>
        </div>

        <div class="p-6 text-gray-300 space-y-2">
            <div class="flex flex-wrap gap-2">
                <span class="text-green-400">root@marcosgonzalez:~/certs#</span>
                <span class="text-white">./verify-credentials.sh --verbose</span
                >
            </div>

            <div class="pt-2 space-y-1">
                <p class="text-gray-500 typing-line-1 opacity-0">
                    > Initializing handshake...
                </p>
                <p class="text-gray-500 typing-line-2 opacity-0">
                    > Connecting to verification servers...
                </p>
                <p class="text-theme-muted typing-line-3 opacity-0 pb-4">
                    > 2 credentials found.
                </p>

                <div class="space-y-4">
                    {
                        certifications.map((cert, index) => (
                            <div
                                class={`cert-item opacity-0 cert-delay-${index}`}
                            >
                                <div class="flex items-center gap-2 text-green-400">
                                    <span>[OK]</span>
                                    <span class="text-white font-bold">
                                        {cert.title}
                                    </span>
                                </div>
                                <div class="pl-11 text-xs md:text-sm text-gray-500 grid grid-cols-1 md:grid-cols-2 gap-x-4 max-w-md">
                                    <span>ISSUER: {cert.issuer}</span>
                                    <span>DATE: {cert.date}</span>
                                    <span class="col-span-1 md:col-span-2 text-gray-600">
                                        HASH: {cert.hash}
                                    </span>
                                </div>
                            </div>
                        ))
                    }
                </div>

                <div
                    class="pt-4 flex items-center gap-2 opacity-0 reveal-cursor"
                >
                    <span class="text-green-400"
                        >root@marcosgonzalez:~/certs#</span
                    >
                    <span class="w-2.5 h-5 bg-gray-400 animate-pulse"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-8 opacity-0 reveal-text">
        <a
            id="btn-cv"
            href="#"
            target="_blank"
            class="p-2 rounded-full hover:bg-theme-muted/10 text-theme-text transition-colors"
            data-lang="cv.btn"
        >
            DESCARGAR CV
        </a>
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    // 1. Título y Contenedor de Terminal
    gsap.to([".reveal-certs-title", ".reveal-terminal"], {
        scrollTrigger: { trigger: "#certifications", start: "top 80%" },
        y: 0,
        opacity: 1,
        duration: 1,
        stagger: 0.2,
        ease: "power3.out",
    });

    // 2. Secuencia de comandos (Simulación de carga)
    const tl = gsap.timeline({
        scrollTrigger: { trigger: ".reveal-terminal", start: "top 75%" },
    });

    // Texto inicial de carga
    tl.to(".typing-line-1", { opacity: 1, duration: 0.1, delay: 0.5 })
        .to(".typing-line-2", { opacity: 1, duration: 0.1, delay: 0.3 })
        .to(".typing-line-3", { opacity: 1, duration: 0.1, delay: 0.3 });

    // Certificaciones (aparecen una por una)
    tl.to(".cert-item", {
        opacity: 1,
        x: 0, // Por si quisieras animar movimiento
        duration: 0.2,
        stagger: 0.6, // Tiempo entre cada certificación
        ease: "power1.out",
    });

    // Cursor final (aparece al terminar)
    tl.to(".reveal-cursor", { opacity: 1, duration: 0.1 });

    // Estado inicial (reseteo visual para GSAP)
    gsap.set([".reveal-certs-title", ".reveal-terminal"], { y: 20 });
</script>
